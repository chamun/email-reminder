<div id="content">
  <h1>Forgot your password?</h1>
  <%= form_for(resource,
               as: resource_name,
               url: password_path(resource_name),
               html: { method: :post }) do |f| %>

    <%= devise_error_messages! %>
    <fieldset>
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true %>
    </fieldset>
    <%= f.submit "Send me reset password instructions" %>
  <% end %>
</div>
