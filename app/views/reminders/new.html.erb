<%= form_for(@reminder) do |f|  %>
  <%= f.label :title, 'Title' %>
  <%= f.text_field :title, required: true %>
  <%= label_tag "reminder[date]", 'Date' %>
  <%= date_field_tag "reminder[date]", nil,
    required: true, placeholder: 'yyyy-mm-dd' %>
  <%= label_tag "reminder[time]", 'Time' %>
  <%= select_tag "reminder[time]", options_for_select(time_options) %>
  <%= f.label :message, 'Message' %>
  <%= f.text_area :message %>
  <%= f.submit 'Submit' %>
<% end %>
